<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="18dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13">


        <TextView
            android:text="Male Events"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Switch

            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch_male_events"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13">


        <TextView
            android:text="Female Events"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Switch

            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch_female_events"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13">


        <TextView
            android:text="Father's Side"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Switch

            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch_fathers_side_events"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13">


        <TextView
            android:text="Mother's Side"
            android:textSize="18dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Switch

            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch_mothers_side_events"
            android:layout_weight="1" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/filter_events"
        android:scrollbars="vertical"
        android:scrollbarSize="30dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>